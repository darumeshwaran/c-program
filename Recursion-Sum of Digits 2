#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int sumofdigits(int n) 
{
  if (n==0)
  return 0;
 return (n%10)+sumofdigits(n/10);
}
int main() 
{
    int n;
    scanf("%d",&n);
    if (n<1000)
    {
     int res= sumofdigits(n);
    printf("Sum of Digit:%04d\n", res);
    } 
    else 
    {
      printf("Enter a Valid Input!!!!!!!\n");
    }
    return 0;
}
